{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "SUPABASE_SERVICE_ROLE_KEY",
        "JWT_SECRET",
        "BCRYPT_SALT_ROUNDS",
        "TENANT_SLUG",
        "DEFAULT_TENANT_SLUG",
        "NEXT_PUBLIC_*"
    ],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        }
    }
}